<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="mvp"
    minApi="7"
    minBuildApi="14"
    description="一键构建纯白架构mvp模式">

    <category value="purewhite" />
    <formfactor value="Mobile" />

    <!-- input data -->

    <parameter
        id="frameName"
        name="frame Name"
        type="string"
        constraints="class|unique|nonempty"
        default="Pure"
        help="架构名字" />

    <parameter
        id="packageName"
        name="package Name"
        type="string"
        constraints="package"
        default="com.pure.white"
        help="包名，与你包名一致，不然会报错" />

    <parameter
        id="filePackageName"
        name="filePackage Name"
        type="string"
        constraints="package"
        suggest="${packageName}.mvp"
        default="com.pure.white.mvp"
        help="文件包名" />

    <parameter
        id="isFile"
        name="is file"
        type="boolean"
        default="true"
        help="是否放在相同文件下，如果不是相同文件下，就放在file下的（activity，presenter，fragment，contract文件下）" />


    <!--  isMvp  -->
    <parameter
        id="isMvp"
        name="is mvp"
        type="boolean"
        default="true"
        help="是否启动mvp架构" />

    <parameter
        id="presenterName"
        name="presenter Name"
        type="string"
        constraints="class|unique|nonempty"
        default="PurePresenter"
        suggest="${frameName}Presenter"
        visibility="isMvp"
        help="presenter类" />
    <parameter
        id="contractName"
        name="contract Name"
        type="string"
        constraints="class|unique|nonempty"
        default="PureContract"
        suggest="${frameName}Contract"
        visibility="isMvp"
        help="Contract类" />




    <!--  isActivity -->
    <parameter
        id="isActivity"
        name="is Activity"
        type="boolean"
        default="true"
        help="是否使用activity" />
    <parameter
        id="activityName"
        name="activity Name"
        type="string"
        constraints="class|unique|nonempty"
        default="PureActivity"
        suggest="${frameName}Activity"
        visibility="isMvp"
        help="Activity类" />
    <parameter
        id="activityLayout"
        name="activity layout"
        type="string"
        constraints="layout|unique|nonempty"
        default="activity_pure"
        suggest="${activityToLayout(activityName)}"
        visibility="isMvp"
        help="Activity类布局" />


    <!--  isActivity -->
    <parameter
        id="isFragment"
        name="is Fragment"
        type="boolean"
        default="false"
        help="是否使用fragment" />
    <parameter
        id="fragmentName"
        name="fragment Name"
        type="string"
        constraints="class|unique|nonempty"
        default="PureFragment"
        suggest="${frameName}Fragment"
        visibility="isFragment"
        help="Fragment类" />
    <parameter
        id="fragmentLayout"
        name="fragment layout"
        type="string"
        constraints="layout|unique|nonempty"
        default="fragment_pure"
        suggest="fragment_${classToResource(frameName)}"
        visibility="isFragment"
        help="Fragment类布局" />


    <!-- 128x128 thumbnails relative to com.puke.template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_cover.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
